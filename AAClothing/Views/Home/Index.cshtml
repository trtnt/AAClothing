
@model List<Productmodel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="text-align:center;">
    <h1 id="title" style="font-family:fantasy; ">AA Clothing</h1>
</div>
<hr />
<br />
<hr />

<div class="container">
    <div class="row">
        @foreach (Productmodel product in Model)
        {

            <a href="@Url.Action("productdetails", "Home", new { id = product.Productid })" style="text-decoration:none">
                <div class="col-sm">
                    <div class="card">
                        <img src="~/lib/images/comingsoon.jpg" alt="AA Clothing" style="width:100%">
                        <h2>@product.Productnaam</h2>
                        <p class="price">€@product.Productprijs</p>
                        <p>@product.Productbeschrijving</p>
                        <p><button>Toevoegen aan winkelwagen</button></p>
                    </div>
                </div>
                </a>
                }
        </div>
</div>

<hr />


<style>

    #title {
        -webkit-text-fill-color: grey;
        -webkit-text-stroke-width: 1.00px;
        font-size: 80px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>
